{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "lib": ["esnext", "DOM"],
    "module": "es6",
    "target": "es2015",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "pretty": true, 
  },
  "include": ["src/**/*", "src"],
  "exclude": ["node_modules"]
}